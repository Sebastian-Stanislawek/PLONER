{
  "name": "ploner",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter @ploner/database migrate:dev",
    "db:push": "pnpm --filter @ploner/database push",
    "db:studio": "pnpm --filter @ploner/database studio",
    "db:generate": "pnpm --filter @ploner/database generate",
    "db:seed": "pnpm --filter @ploner/database seed"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}

